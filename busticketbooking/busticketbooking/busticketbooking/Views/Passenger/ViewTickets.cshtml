@model IEnumerable<busticketbooking.Models.Booking>

<div class="container mt-5">
    <h2>My Tickets</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Route</th>
                <th>Travel Date</th>
                <th>Total Fare</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingID</td>
                    <td>@booking.Schedule.Route.Source to @booking.Schedule.Route.Destination</td>
                    <td>@booking.Schedule.Date.ToShortDateString()</td>
                    <td>@booking.TotalFare</td>
                    <td>@booking.Status</td>
                    <td>
                        @if (booking.Status == "Booked")
                        {
                            <form asp-action="CancelTicket" method="post" class="d-inline">
                                <input type="hidden" name="bookingId" value="@booking.BookingID" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
