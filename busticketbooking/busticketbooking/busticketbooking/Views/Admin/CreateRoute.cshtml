@model busticketbooking.Models.CreateRouteViewModel

<div class="container mt-5">
    <h2>Add New Route</h2>
    <form asp-action="CreateRoute" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Source" class="form-label"></label>
            <input asp-for="Source" class="form-control" />
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Destination" class="form-label"></label>
            <input asp-for="Destination" class="form-control" />
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Duration" class="form-label"></label>
            <input asp-for="Duration" type="time" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Distance" class="form-label"></label>
            <input asp-for="Distance" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Route</button>
    </form>
</div>
