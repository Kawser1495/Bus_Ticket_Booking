@model busticketbooking.Models.CreateBusViewModel

<div class="container mt-5">
    <h2>Create Bus</h2>
    <form asp-action="CreateBus" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="BusNumber" class="form-label"></label>
            <input asp-for="BusNumber" class="form-control" />
            <span asp-validation-for="BusNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BusType" class="form-label"></label>
            <input asp-for="BusType" class="form-control" />
            <span asp-validation-for="BusType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TotalSeats" class="form-label"></label>
            <input asp-for="TotalSeats" type="number" class="form-control" />
            <span asp-validation-for="TotalSeats" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
